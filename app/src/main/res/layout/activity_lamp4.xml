<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lamp4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.finalproject.lamp4">

    <TextView
        android:text="Value of blue:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lamp4_blue"
        android:layout_alignBottom="@+id/lamp4_editblue"
        android:layout_toStartOf="@+id/lamp4_editblue" />

    <TextView
        android:text="Value of red:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lamp4_red"
        android:layout_alignBottom="@+id/lamp4_editRed"
        android:layout_toStartOf="@+id/lamp4_editRed" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/lamp4_editblue"
        android:layout_below="@+id/lamp4_editRed"
        android:layout_toEndOf="@+id/lamp4_green" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/lamp4_editgreen"
        android:layout_below="@+id/lamp4_editblue"
        android:layout_toEndOf="@+id/lamp4_blue" />

    <TextView
        android:text="value of Green:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lamp4_green"
        android:layout_alignBottom="@+id/lamp4_editgreen"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Color!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lamp4_green"
        android:layout_toStartOf="@+id/lamp4_editgreen"
        android:id="@+id/lamp4_calc" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lamp4_color"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lamp4_red" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/lamp4_editRed"
        android:layout_below="@+id/lamp4_color"
        android:layout_alignStart="@+id/lamp4_editblue" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:max="100"
        android:layout_alignParentStart="true"
        android:id="@+id/lamp4_prog" />

</RelativeLayout>
